CC = gcc

CFLAGS = -std=c99 -g -Wall
LDFLAGS =  
SRCDIR = src
ODIR = bin
PROG = a.out

all: main.o log.o
	$(CC) $(LDFLAGS) $(ODIR)/*.o -o $(ODIR)/$(PROG)

main.o: $(SRCDIR)/main.c
	$(CC) $(CFLAGS) -c $(SRCDIR)/main.c -o $(ODIR)/main.o

log.o: $(SRCDIR)/log.c
	$(CC) $(CFLAGS) -c $(SRCDIR)/log.c -o $(ODIR)/log.o

clean:
	rm -f $(ODIR)/$(PROG) $(ODIR)/*.o
